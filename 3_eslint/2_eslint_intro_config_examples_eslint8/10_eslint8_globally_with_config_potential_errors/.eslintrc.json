{
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "rules": {
    "no-undef": "error",
    "no-unused-vars": "warn",
    "no-console": "error",
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-var": "error",
    "no-cond-assign": ["error", "always"]
  }
}
